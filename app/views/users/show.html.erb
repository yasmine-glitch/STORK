<div class="flex-container">
 <!-- affiche en haut de la page les infos sur le user-->
 <!-- dans un encadré à gauche : avatar, nom, company, job title, industry, age, years exp-->
  <%# <div class="container"> %>
    <div class="wrapper">
      <div class="card-user">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, class: "avatar-large", alt: "avatar-large"   %>
        <% end %>
        <h3><%= @user.first_name %> <%= @user.last_name %></h3>
        <p><i class="fas fa-laptop-house"></i>  <%= @user.company %></p>
        <p><i class="fas fa-briefcase"></i>  <%= @user.industry %></p>
        <p><i class="fas fa-address-card"></i>  <%= @user.job_title %></p>
        <p><i class="fas fa-globe"></i>  lives in <%= @user.country %></p>
        <p><i class="fas fa-birthday-cake"></i>  <%= @user.age %> years old</p>
        <p><i class="fas fa-jedi"></i>  <%= @user.years_exp %> years of experience</p>
      </div>
    </div>
  <%# </div> %>

  <!-- dans un encadré à droite : la bio -->
  <div class="wrapper">
    <div class="user-bio">
      <h3>Hello, my name is <%= @user.first_name %></h3>
      <p>member since <%= @user.created_at %></p>
      <br>
      <br>
      <h4>About <%= @user.first_name %></h4>
      <p><%= @user.bio %></p>
    </div>
  </div>
</div>

<h2 class="m-4 ps-3">Discover what <%= @user.first_name %> has been up to lately on Stork...</h2>
<h3 class="m-4 ps-3"> <%= @user.first_name %> participated in <%= @user.activities.length %> events !</h3>
<div class="d-flex justify-content-center">
  <% @user.activities.each do |activity| %>
    <div class="card-user-activities">
      <%= link_to activity_path(activity) do%>
        <div class="user-activity">
          <% if activity.photo.attached? %>
            <div class="card-user-image" style="background-image: url(<%= cl_image_path activity.photo.key %>)">
            </div>
          <% end %>
          <div class="user-card-body p-3 d-flex flex-column">
            <div class="user-card-body-first-part">
              <div class="d-flex justify-content-between">
                <h5 class="popular-card-title"><%= activity.name %></h5>
              </div>
              <div class="d-flex justify-content-between">
                <p class="popular-card-place"><%= activity.place %></p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="popular-card-place"><%= activity.start_date.strftime("%R %:z" " " "UTC") %></p>
              </div>
              <p class="popular-card-text"><%= activity.description %></p>
              <p>Implement categories here ! (act_as_taggable)</p>
            </div>
            <div class="user-card-body-second-part">
            <p><%= activity.users.length %> participants</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


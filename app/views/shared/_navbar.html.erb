  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%="home-navbar" if params[:action]=="home"%>">
    <div class="container-fluid">
      <div class="logo-name">
        <%= link_to "/", class: "navbar-brand" do %>
          <%= image_tag "#{ params[:action]=="home"? 'origami-2.png' : 'origami-black.png'}"%>
        <% end %>
      <p>STORK</p>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "All Activities", "/activities", class: "nav-link", id: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Dashboard", "/dashboard", class: "nav-link", id: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <%= cl_image_tag current_user.photo.key, crop: :thumb, class: "user-pic dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

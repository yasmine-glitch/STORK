
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.04),rgba(0,0,0,0.04)), url('<%= image_path "homepage/homepage_background.png" %>');">
  <div class="container d-flex">
    <div id="header">
      <h1><strong>Stork</strong></h1>
      <p>Develop your network, travelling for work !</p>
    </div>
    <div class="box_for_search_bar" style="width: fit-content">
      <%= form_tag activities_path, method: :get do %>
        <div class="search_bar">
          <div class= "btn btn-filter" style="width: 400px" data-controller="geocoder" data-geocoder-api-key-value="<%=ENV['MAPBOX_API_KEY']%>">
            <%= text_field_tag :query,
              params[:query],
              data: { geocoder_target: "address" },
              class: "form-control d-none"
            %>
          </div>

          <div class= "btn btn-filter" style="width: 200px">
            <%= text_field_tag :start_date,
              params[:start_date],
              class: "datepicker form-control",
              placeholder: "Choose a date..."
            %>
          </div>
          <div>
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

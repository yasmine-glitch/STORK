
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.04),rgba(0,0,0,0.04)), url('<%= image_path "homepage/homepage_background.png" %>');">
  <div class="container">
    <div class="d-flex justify-content-between">
      <div id="header">
        <h1 id="stork_title"><strong>Meet people and enjoy!</strong></h1>
        <p>
          <span data-controller="typed-js"></span>
        </p>
      </div>
      <div id="search_bar_div">
        <div class="box_for_search_bar" style="width: fit-content">
          <%= form_tag activities_path, method: :get do %>
            <div class="search_bar">
              <div class= "btn btn-filter" style="width: 400px" data-controller="geocoder" data-geocoder-api-key-value="<%=ENV['MAPBOX_API_KEY']%>">
                <%= text_field_tag :query,
                  params[:query],
                  data: { geocoder_target: "address" },
                  class: "form-control d-none"
                %>
              </div>

              <div class= "btn btn-filter" style="width: 200px">
                <%= text_field_tag :start_date,
                  params[:start_date],
                  class: "datepicker form-control",
                  "data-controller": "flatpickr",
                  value: Date.today
                %>
              </div>
              <div>
                <%= button_tag(type: "submit", class: "btn btn-default") do %>
                  <i class="fas fa-search"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<h2 class="container mt-3">Most popular activities on Stork...</h2>
<div class="d-flex justify-content-center">
  <% @activities.each do |activity| %>
    <div class="popular-card-activity">
      <%= link_to activity_path(activity) do%>
        <div class="pop-activity">
          <% if activity.photo.attached? %>
            <div class="popular-card-image" style="background-image: url(<%= cl_image_path activity.photo.key %>)">
              <div class="banner-places-left">
                <p><%= activity.capacity_max - activity.users.length %> places left... Register now !</p>
              </div>
            </div>
          <% end %>
          <div class="popular-card-body p-3 d-flex flex-column">
            <div class="popular-card-body-first-part">
              <div class="d-flex justify-content-between">
                <h5 class="popular-card-title"><%= activity.name %></h5>
                <p> ðŸ”¥ </p>
              </div>
              <p class="popular-card-text"><%= activity.description %></p>
            </div>
            <div class="popular-card-body-second-part">
            <p><%= activity.users.length %> participants</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>



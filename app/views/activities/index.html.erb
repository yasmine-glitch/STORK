<div class="flex-container">
  <!-- affiche les résultats d'activity cards correspondant à la recherche-->
  <div class="container flex-item">
    <div class="wrapper">
      <% @activities.each do |activity| %>
          <div class="card-activity">
            <%= link_to activity_path(activity) do%>
            <% if activity.photo.attached? %>
              <%= cl_image_tag activity.photo.key %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= activity.name.truncate(15) %></h5>
              <p class="card-text"><%= activity.description %> Ajouter des desciptions dans la seed</p>
              <!-- ajouter les avatars des participants et de l'organisateur -->
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- carte Mapbox-->
  <div class="flex-item" style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

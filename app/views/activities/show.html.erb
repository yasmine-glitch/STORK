<h1> Show Activity </h1>

<div class="container">

  <div class="activity-show-header">
    <h2> Happening <%= @activity.start_date %> </h2>
    <%= @activity.owner.photo %>
    organized by <p><%= @activity.owner.first_name %> <%= @activity.owner.last_name %> </p>
    <p> <%= @activity.owner.company %></p>
    <p> <%= @activity.owner.industry %></p>
    <p> <%= @activity.owner.job_title %></p>
  </div>
  <div class="activity-description">
    <p><%= @activity.name %>></p>
    <p><%= @activity.description %>></p>
    <p><%= @activity.address %>></p>
    <p><%= 1 km distance from you %>></p>
    <%= simple_form_for (@activity), remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Write a message to #{@activity.owner}" %>
      <%= f.submit class: "btn-send"%>
    <% end %>
  </div>







</div>
